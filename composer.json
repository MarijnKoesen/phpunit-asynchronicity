{
    "name": "matthiasnoback/phpunit-asynchronicity",
    "description": "Library for asserting things that happen asynchronously with PHPUnit",
    "license": "MIT",
    "type": "library",
    "keywords": ["PHPUnit", "asynchronicity", "assertion"],
    "homepage": "http://github.com/matthiasnoback/phpunit-asynchronicity",
    "authors": [
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "autoload": {
        "psr-4": {
            "Asynchronicity\\": "src/Asynchronicity/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Asynchronicity\\": "tests/Asynchronicity/"
        }
    },
    "require": {
        "php": "^7.1",
        "phpunit/phpunit": "^7.1",
        "beberlei/assert": "^2.9"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.9.2"
    }
}
